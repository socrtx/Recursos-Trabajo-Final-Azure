@model TutorialMVC.Models.Director

<div class="container">
    <br />
    <br />
    <br />
    <div class="col-md-12 alert-danger">
        <div class="row">
            <div class="col-sm-2 col-lg-2">
                <br />
                @Html.ActionLink("< Regresar Listado", "Index", "Directors", new { area = "" }, new { @class = "btn btn-danger" })
            </div>
            <div class="col-sm-1 col-lg-1">

                <img class="img-rounded" src="/Images/director.gif" alt="Generic placeholder image" width="70" height="70">
            </div>

            <div class="col-sm-9 col-lg-9">

                <h1 class="h1">
                    Modificar Director <small>Modificación de los datos del director</small>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            </div>

        </div>
    </div>
    <div class="col-md-12">
        <div class="form-area">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label>Nombre</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        @Html.EditorFor(model => model.FirsName, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre del Director" } })
                        @Html.ValidationMessageFor(model => model.FirsName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Apellidos</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Apellidos del director" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Biografía</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-comment"></span></span>
                        @Html.TextAreaFor(model => model.Biography, new { @class = "form-control", @rows = 5, @placeholder = "Biografia del director" })
                        @Html.ValidationMessageFor(model => model.Biography, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Foto</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-picture"></span></span>
                        @Html.EditorFor(model => model.Photo, new { htmlAttributes = new { @class = "form-control", placeholder = "Foto del director" } })
                        @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <input type="hidden" name="DirectorID" id="DirectorID" value="@Html.DisplayFor(model => model.DirectorID)">
                <button type="submit" class="btn btn-danger">
                    <span class="glyphicon glyphicon-edit"></span> Modificar
                </button>
            }

        </div>



    </div>
</div>
