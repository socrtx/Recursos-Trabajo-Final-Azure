@model TutorialMVC.Models.Study


<div class="container">
    <br />
    <br />
    <br />
    <div class="col-md-12 alert-danger">
        <div class="row">
            <div class="col-sm-2 col-lg-2">
                <br />
                @Html.ActionLink("< Regresar Listado", "Index", "Studies", new { area = "" }, new { @class = "btn btn-danger" })
            </div>
            <div class="col-sm-1 col-lg-1">

                <img class="img-rounded" src="/Images/director.gif" alt="Generic placeholder image" width="70" height="70">
            </div>

            <div class="col-sm-9 col-lg-9">

                <h1 class="h1">
                    Alta Estudio <small>informe de los datos del estudio</small>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            </div>

        </div>
    </div>
    <div class="col-md-12">
        <div class="form-area">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label>Nombre</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-tag"></span></span>
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre del Estudio" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Tipo</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-tags"></span></span>
                        @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control", placeholder = "Tipo de Estudio" } })
                        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Dirección</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Dirección de Estudio" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Ubicación</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-map-marker"></span></span>
                        @Html.EditorFor(model => model.GoogleMap, new { htmlAttributes = new { @class = "form-control", placeholder = "Ubicación del estudio 40.445100~-3.473261" } })
                        @Html.ValidationMessageFor(model => model.GoogleMap, "", new { @class = "text-danger" })
                    </div>
                </div>
                <button type="submit" class="btn btn-danger">
                    <span class="glyphicon glyphicon-plus"></span> Alta Estudio
                </button>
            }

        </div>
    </div>
</div>



