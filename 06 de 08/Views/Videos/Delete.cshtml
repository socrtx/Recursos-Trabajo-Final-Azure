@model TutorialMVC.Models.Video

<div class="container">
    <br />
    <br />
    <br />
    <div class="col-md-12 alert-danger">
        <div class="row">
            <div class="col-sm-2 col-lg-2">
                <br />
                @Html.ActionLink("< Regresar Listado", "Index", "Videos", new { area = "" }, new { @class = "btn btn-danger" })
            </div>
            <div class="col-sm-1 col-lg-1">
                <img class="img-rounded" src="~/Images/video.gif" alt="Generic placeholder image" width="70" height="70">
            </div>
            <div class="col-sm-9 col-lg-9">
                <h1 class="h1">
                    Eliminar regitro de este video
                </h1>
            </div>
        </div>
    </div>
    <h2>Estas seguro de eliminar este video</h2>
    <div class="col-md-12">
        <div class="form-area">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Titulo</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-film"></span></span>
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    </div>
                </div>
                <div class="form-group">
                    <label>Fecha</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                        @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    </div>
                </div>
                <div class="form-group">
                    <label>Materia</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-barcode"></span></span>
                        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    </div>
                </div>
                <div class="form-group">
                    <label>Descripción</label>
                    <div class="input-group">
                        <iframe width="250" height="150" src="https://www.youtube.com/embed/@Html.DisplayFor(model => model.Youtube)" frameborder="0" allowfullscreen></iframe>                   </div>
                </div>
                <div class="form-group">
                    <label>Url YouTube</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-camera"></span></span>
                        @Html.EditorFor(model => model.Youtube, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    </div>
                </div>
                <input type="hidden" name="VideoID" id="VideoID" value="@Html.DisplayFor(model => model.VideoID)">
                <button type="submit" class="btn btn-danger">
                    <span class="glyphicon glyphicon-minus-sign"></span> Borrar Video
                </button>
            }
        </div>
    </div>
</div>

