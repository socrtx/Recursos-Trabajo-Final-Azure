@model TutorialMVC.Models.Video


<div class="container">
    <br />
    <br />
    <br />
    <div class="col-md-12 alert-danger">
        <div class="row">
            <div class="col-sm-2 col-lg-2">
                <br />
                @Html.ActionLink("< Regresar Listado", "Index", "Videos", new { area = "" }, new { @class = "btn btn-danger" })
            </div>
            <div class="col-sm-1 col-lg-1">
                <img class="img-rounded" src="~/Images/video.gif" alt="Generic placeholder image" width="70" height="70">
            </div>
            <div class="col-sm-9 col-lg-9">

                <h1 class="h1">
                    Alta Video <small>informe de los datos del video</small>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            </div>

        </div>
    </div>
    <div class="col-md-12">
        <div class="form-area">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label>Titulo</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-film"></span></span>
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Titulo del video" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Fecha</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                        @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", placeholder = "Fecha del Video" } })
                        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Tema</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-barcode"></span></span>
                        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", placeholder = "Tema del video" } })
                        @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Descripción</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-comment"></span></span>
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows = 5, @placeholder = "Notas y comentarios sobre el video" })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Url Youtube</label>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-camera"></span></span>
                        @Html.EditorFor(model => model.Youtube, new { htmlAttributes = new { @class = "form-control", placeholder = "Url del video" } })
                        @Html.ValidationMessageFor(model => model.Youtube, "", new { @class = "text-danger" })
                    </div>
                </div>
                <button type="submit" class="btn btn-danger">
                    <span class="glyphicon glyphicon-plus"></span> Alta Video
                </button>
            }

        </div>
    </div>
</div>


